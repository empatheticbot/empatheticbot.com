<style>
  .container {
    min-height: 100vh;
    padding: 0;
  }

  /* Navigation */
  .nav {
    position: sticky;
    top: 0;
    z-index: 100;
    background: white;
    border-bottom: 1px solid #e5e5e5;
  }

  .nav-container {
    max-width: var(--max-width);
    margin: 0 auto;
    padding: 1.5rem 2rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .nav-logo {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    text-decoration: none;
    color: var(--color-text);
    font-weight: 600;
    font-size: 1.1rem;
  }

  .nav-menu {
    display: flex;
    list-style: none;
    gap: 2rem;
    margin: 0;
    padding: 0;
    align-items: center;
  }

  .nav-link {
    text-decoration: none;
    color: var(--color-text);
    font-weight: 500;
    font-size: 0.95rem;
  }

  .nav-link:hover {
    color: var(--color-accent);
  }

  .nav-link-cta {
    background: var(--color-accent);
    color: white;
    padding: 0.5rem 1.25rem;
    border-radius: 6px;
  }

  .nav-link-cta:hover {
    color: white;
    opacity: 0.9;
  }

  /* Hero Section */
  .hero {
    max-width: 900px;
    margin: 0 auto;
    padding: 6rem 2rem;
    text-align: center;
  }

  .logo-container {
    margin-bottom: 2rem;
    display: inline-block;
  }

  .title {
    font-size: clamp(3rem, 10vw, 4.5rem);
    font-weight: 700;
    margin-bottom: 1rem;
    color: var(--color-text);
  }

  .tagline {
    font-size: clamp(1.2rem, 4vw, 1.5rem);
    color: #666;
    margin-bottom: 0.5rem;
  }

  .subtitle {
    font-size: clamp(1rem, 2.5vw, 1.1rem);
    color: #999;
  }

  /* About Section */
  .about {
    max-width: 800px;
    margin: 5rem auto;
    padding: 3rem 2rem;
    text-align: center;
  }

  .about h2 {
    font-size: clamp(1.8rem, 5vw, 2.2rem);
    margin-bottom: 1.5rem;
    font-weight: 600;
  }

  .about-intro {
    font-size: clamp(1rem, 2.5vw, 1.15rem);
    line-height: 1.7;
    color: #666;
    margin-bottom: 2rem;
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
  }

  .features-simple {
    display: flex;
    gap: 1rem;
    justify-content: center;
    flex-wrap: wrap;
  }

  .feature-simple {
    padding: 0.5rem 1rem;
    background: #f5f5f5;
    border-radius: 6px;
    font-size: 0.9rem;
    color: #666;
  }

  /* Portfolio Section */
  .portfolio {
    max-width: 1000px;
    margin: 5rem auto;
    padding: 3rem 2rem;
    text-align: center;
  }

  .portfolio h2 {
    font-size: clamp(1.8rem, 5vw, 2.2rem);
    margin-bottom: 2.5rem;
    font-weight: 600;
  }

  .portfolio-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 2rem;
  }

  .portfolio-item {
    padding: 2rem;
    text-align: center;
    border: 1px solid #e5e5e5;
    border-radius: 8px;
  }

  .portfolio-icon {
    font-size: 2.5rem;
    margin-bottom: 1rem;
    display: block;
  }

  .portfolio-item h3 {
    font-size: 1.2rem;
    margin-bottom: 0.5rem;
    font-weight: 600;
    color: var(--color-text);
  }

  .portfolio-item p {
    color: #666;
    line-height: 1.6;
    font-size: 0.95rem;
  }

  /* Pricing Section */
  .pricing {
    max-width: var(--max-width);
    margin: 5rem auto;
    padding: 3rem 2rem;
  }

  .pricing h2 {
    font-size: clamp(1.8rem, 5vw, 2.2rem);
    text-align: center;
    margin-bottom: 0.75rem;
    font-weight: 600;
  }

  .pricing-subtitle {
    text-align: center;
    font-size: 1.05rem;
    color: #666;
    margin-bottom: 3rem;
  }

  .pricing-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 2rem;
    align-items: stretch;
  }

  .pricing-card {
    padding: 2rem;
    border: 1px solid #e5e5e5;
    border-radius: 8px;
    display: flex;
    flex-direction: column;
    position: relative;
    background: white;
  }

  .pricing-card.popular {
    border-color: var(--color-accent);
    box-shadow: 0 0 0 2px var(--color-accent);
  }

  .popular-badge {
    position: absolute;
    top: -12px;
    left: 50%;
    transform: translateX(-50%);
    background: var(--color-accent);
    color: white;
    padding: 0.25rem 1rem;
    font-size: 0.85rem;
    font-weight: 600;
    border-radius: 6px;
    white-space: nowrap;
  }

  .pricing-card h3 {
    font-size: 1.4rem;
    margin-bottom: 1rem;
    font-weight: 600;
  }

  .price {
    margin-bottom: 2rem;
  }

  .price .amount {
    font-size: 2.5rem;
    font-weight: 700;
    color: var(--color-text);
  }

  .price .period {
    font-size: 1rem;
    color: #666;
  }

  .features {
    list-style: none;
    margin: 0 0 2rem 0;
    padding: 0;
    flex-grow: 1;
  }

  .features li {
    padding: 0.5rem 0;
    color: #666;
    line-height: 1.6;
  }

  .subscribe-button {
    width: 100%;
    padding: 1rem;
    font-size: 1rem;
    font-weight: 600;
    color: white;
    background: var(--color-accent);
    border: none;
    border-radius: 6px;
    cursor: pointer;
    font-family: inherit;
  }

  .subscribe-button:hover:not(:disabled) {
    opacity: 0.9;
  }

  .subscribe-button:disabled {
    opacity: 0.6;
    cursor: not-allowed;
  }

  /* CTA Section */
  .cta {
    max-width: 700px;
    margin: 5rem auto;
    padding: 3rem 2rem;
    text-align: center;
  }

  .cta h2 {
    font-size: clamp(1.8rem, 5vw, 2.2rem);
    margin-bottom: 1rem;
    font-weight: 600;
  }

  .cta p {
    font-size: 1.05rem;
    color: #666;
    margin-bottom: 2rem;
  }

  .cta-button {
    display: inline-block;
    padding: 1rem 2rem;
    font-size: 1rem;
    font-weight: 600;
    color: white;
    background: var(--color-accent);
    border-radius: 6px;
    text-decoration: none;
  }

  .cta-button:hover {
    opacity: 0.9;
  }

  /* Footer */
  .footer {
    max-width: var(--max-width);
    margin: 4rem auto 0;
    padding: 3rem 2rem;
    text-align: center;
    color: #999;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 1rem;
    border-top: 1px solid #e5e5e5;
  }

  /* Responsive */
  @media (max-width: 768px) {
    .nav-container {
      padding: 1rem;
    }

    .nav-menu {
      gap: 1rem;
      font-size: 0.9rem;
    }

    .nav-link-cta {
      padding: 0.4rem 1rem;
    }

    .hero {
      padding: 4rem 1.5rem;
    }

    .about,
    .portfolio,
    .pricing,
    .cta {
      padding: 3rem 1.5rem;
      margin: 3rem 1rem;
    }

    .pricing-grid,
    .portfolio-grid {
      grid-template-columns: 1fr;
      gap: 1.5rem;
    }
  }
</style>

<script>
  // Smooth scrolling for navigation links
  document.querySelectorAll<HTMLAnchorElement>('.nav-link').forEach(link => {
    link.addEventListener('click', (e) => {
      e.preventDefault();
      const targetId = link.getAttribute('href');
      if (targetId && targetId.startsWith('#')) {
        const targetElement = document.querySelector(targetId) as HTMLElement;
        const navElement = document.querySelector('.nav') as HTMLElement;
        if (targetElement && navElement) {
          const navHeight = navElement.offsetHeight;
          const targetPosition = targetElement.offsetTop - navHeight - 20;
          window.scrollTo({
            top: targetPosition,
            behavior: 'smooth'
          });
        }
      }
    });
  });

  // Handle subscription button clicks
  document.querySelectorAll('.subscribe-button').forEach(button => {
    button.addEventListener('click', async (e) => {
      const target = e.target as HTMLButtonElement;
      const tier = target.dataset.tier;

      if (!tier) return;

      // Disable button during request
      target.disabled = true;
      const originalText = target.textContent;
      target.textContent = 'Loading...';

      try {
        const response = await fetch('/api/create-checkout-session', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json',
          },
          body: JSON.stringify({ tier }),
        });

        const data = await response.json();

        if (!response.ok) {
          throw new Error(data.error || 'Failed to create checkout session');
        }

        // Redirect to Stripe Checkout
        if (data.url) {
          window.location.href = data.url;
        }
      } catch (error) {
        console.error('Error:', error);
        alert(error instanceof Error ? error.message : 'An error occurred. Please try again.');

        // Re-enable button
        target.disabled = false;
        target.textContent = originalText;
      }
    });
  });
</script>
