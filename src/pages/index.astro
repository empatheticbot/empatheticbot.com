<style>
  .container {
    min-height: 100vh;
    padding: 2rem 1rem;
  }

  /* Hero Section */
  .hero {
    max-width: var(--max-width);
    margin: 0 auto;
    padding: 4rem 2rem;
    text-align: center;
    position: relative;
    border: 2px dashed var(--color-sketch);
    margin-bottom: 4rem;
    background: transparent;
  }

  .logo-container {
    margin-bottom: 1.5rem;
    display: inline-block;
  }

  .title {
    font-size: clamp(2.5rem, 8vw, 4.5rem);
    font-weight: 800;
    margin-bottom: 1rem;
    color: var(--color-text);
    letter-spacing: -0.02em;
  }

  .tagline {
    font-size: clamp(1.1rem, 3vw, 1.5rem);
    color: #666;
    font-weight: 300;
  }

  /* Pitch Section */
  .pitch {
    max-width: 800px;
    margin: 4rem auto;
    padding: 3rem 2rem;
    border: 2px dashed var(--color-sketch);
    background: transparent;
  }

  .pitch-content h2 {
    font-size: clamp(1.8rem, 5vw, 2.5rem);
    margin-bottom: 1.5rem;
    font-weight: 700;
  }

  .pitch-text {
    font-size: clamp(1.1rem, 2.5vw, 1.3rem);
    line-height: 1.8;
    margin-bottom: 1.5rem;
    color: #555;
  }

  /* Benefits Section */
  .benefits {
    max-width: var(--max-width);
    margin: 4rem auto;
    padding: 3rem 2rem;
    border: 2px dashed var(--color-sketch);
    background: transparent;
  }

  .benefits h2 {
    font-size: clamp(1.8rem, 5vw, 2.5rem);
    text-align: center;
    margin-bottom: 3rem;
    font-weight: 700;
  }

  .benefits-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 2rem;
  }

  .benefit-card {
    padding: 2rem;
    border: 2px dashed var(--color-sketch);
    background: transparent;
    transition: all 0.6s ease;
  }

  .benefit-icon {
    font-size: 2.5rem;
    margin-bottom: 1rem;
  }

  .benefit-card h3 {
    font-size: 1.3rem;
    margin-bottom: 0.75rem;
    font-weight: 600;
  }

  .benefit-card p {
    color: #666;
    line-height: 1.6;
  }

  /* Pricing Section */
  .pricing {
    max-width: var(--max-width);
    margin: 4rem auto;
    padding: 3rem 2rem;
    border: 2px dashed var(--color-sketch);
    background: transparent;
  }

  .pricing h2 {
    font-size: clamp(1.8rem, 5vw, 2.5rem);
    text-align: center;
    margin-bottom: 1rem;
    font-weight: 700;
  }

  .pricing-subtitle {
    text-align: center;
    font-size: 1.2rem;
    color: #666;
    margin-bottom: 3rem;
  }

  .pricing-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 2rem;
    align-items: stretch;
  }

  .pricing-card {
    padding: 2rem;
    border: 2px dashed var(--color-sketch);
    background: transparent;
    transition: all 0.6s ease;
    display: flex;
    flex-direction: column;
    position: relative;
  }

  .pricing-card.popular {
    border-color: var(--color-accent);
    transform: scale(1.05);
  }

  .popular-badge {
    position: absolute;
    top: -12px;
    left: 50%;
    transform: translateX(-50%);
    background: var(--color-accent);
    color: white;
    padding: 0.25rem 1rem;
    font-size: 0.875rem;
    font-weight: 600;
    border-radius: 12px;
