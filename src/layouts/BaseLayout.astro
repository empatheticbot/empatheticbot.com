---
interface Props {
  title: string;
  description?: string;
}

const { title, description = "Monthly web development subscription for local businesses" } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <slot />
  </body>
</html>

<style is:global>
  :root {
    --color-text: #1a1a1a;
    --color-sketch: #888;
    --color-complete: #444;
    --color-accent: #ff6b6b;
    --color-bg: #fafafa;
    --max-width: 1200px;
  }

  * {
    box-sizing: border-box;
    margin: 0;
    padding: 0;
  }

  html {
    scroll-behavior: smooth;
  }

  body {
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
    line-height: 1.6;
    color: var(--color-text);
    background: var(--color-bg);
    overflow-x: hidden;
  }

  /* Sketch stroke effect */
  .sketch-element {
    position: relative;
    transition: all 0.6s ease-out;
  }

  .sketch-element::before,
  .sketch-element::after {
    content: '';
    position: absolute;
    border: 2px solid var(--color-sketch);
    transition: all 0.8s cubic-bezier(0.4, 0, 0.2, 1);
    pointer-events: none;
  }

  /* When element is filled */
  .filled {
    background: white;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
  }

  .filled::before,
  .filled::after {
    border-color: var(--color-complete);
    border-width: 1px;
  }
</style>
